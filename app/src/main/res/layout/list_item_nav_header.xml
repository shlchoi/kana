<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/battery_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:paddingBottom="@dimen/nav_menu_padding"
    android:paddingTop="@dimen/nav_menu_padding"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/nav_menu_header_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/nav_menu_short_padding"
        android:includeFontPadding="false"
        android:gravity="center_vertical"
        tools:text="KOREA 101R"
        style="@style/nav_menu_item_text"
        />

</LinearLayout>